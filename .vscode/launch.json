{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Debug Csmith",
        "type": "cppdbg",
        "request": "launch",
        "program": "/usr/local/bin/csmith",  // 指向你编译后的Csmith可执行文件
        "args": [],
        "stopAtEntry": false,
        "cwd": "${workspaceFolder}",
        "environment": [],
        "externalConsole": true,
        "MIMode": "gdb",
        "miDebuggerPath": "/usr/bin/gdb",  // 替换为你系统上的GDB路径
        "setupCommands": [
          {
            "description": "Enable pretty-printing for gdb",
            "text": "-enable-pretty-printing",
            "ignoreFailures": true
          }
        ]
      }
    ]
  }